# GitHub Configuration
# Required: GitHub Personal Access Token with repo and project permissions
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Required: GitHub organization name
GITHUB_ORG=storacha

# Required: GitHub Project number (found in project URL)
PROJECT_NUMBER=1

# Gemini AI Configuration
# Required: Google Gemini API key for similarity detection
# Get one at: https://ai.google.dev/
GEMINI_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Discord Configuration
# Optional: Discord webhook URL for channel notifications (daily updates)
# Create at: Server Settings → Integrations → Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/123456789012345678/xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Discord bot token for sending DMs (weekly updates)
# Create at: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=XXXXXXXXXXXXXXXXXXXXXXXX.XXXXXX.XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Optional: JSON mapping of GitHub usernames to Discord user IDs
# Format: {"github-username": "discord-user-id", "another-user": "123456789"}
# Get Discord IDs: Enable Developer Mode in Discord, right-click user, Copy User ID
USER_MAPPINGS={"alice":"123456789012345678","bob":"987654321098765432"}

# Optional: Discord user ID to receive unassigned issues report
# This user will get a DM every Monday with all unassigned active issues
UNASSIGNED_ISSUES_USER_ID=123456789012345678

# Agent Behavior Configuration
# Optional: Days of inactivity before marking issues as stale (default: 180)
STALENESS_THRESHOLD_DAYS=180

# Optional: Similarity threshold for duplicate detection, 0.0-1.0 (default: 0.85)
DUPLICATE_SIMILARITY=0.85

# Optional: Days since last update to flag for daily check (default: 3)
DAILY_UPDATE_THRESHOLD=3

# Optional: Comma-separated list of statuses to analyze (default shown below)
TARGET_STATUSES="Inbox, Backlog, Sprint Backlog, In Progress, PR Review"

# Optional: Dry run mode - if "true", no changes are made (default: false)
DRY_RUN=false
